<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/logoapp2</item>
        <item name="android:animation">@anim/animacion1</item>
    </style>
    
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/blanco</item>
        <item name="colorControlActivated">@color/blanco</item>
        <item name="colorControlHighlight">@color/blanco</item>

        <item name="android:textColor">@color/negro</item>
        <item name="android:textColorPrimary">@color/blanco</item>
        <item name="android:textColorSecondary">@color/blanco</item>
        <item name="android:textColorHint">@color/plomo</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/fondo1</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:windowBackground">@color/blanco</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>